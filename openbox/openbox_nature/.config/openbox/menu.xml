<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="apps-audio-menu" label="Audio">
  <item label="Audacity"><action name="Execute"><command>audacity</command></action></item>
  <item label="Lmms"><action name="Execute"><command>lmms</command></action></item>
  <item label="Hydrogen"><action name="Execute"><command>hydrogen</command></action></item>

  <separator />

  <item label="Pavucontrol"><action name="Execute"><command>pavucontrol</command></action></item>
  <item label="OBS"><action name="Execute"><command>obs</command></action></item>
</menu>


<menu id="apps-graphics-menu" label="Graphics">
  <item label="Gimp"><action name="Execute"><command>gimp</command></action></item>
  <item label="Inkscape"><action name="Execute"><command>inkscape</command></action></item>
  <item label="Blender"><action name="Execute"><command>blender</command></action></item>

  <separator />

  <item label="Scrot"><action name="Execute"><command>scrot</command></action></item>
  <item label="Scrot 5s"><action name="Execute"><command>scrot -d 5</command></action></item>
</menu>


<menu id="apps-soft-menu" label="Soft">
  <item label="Lutris"><action name="Execute"><command>lutris</command></action></item>
  <item label="Virt-Manager"><action name="Execute"><command>virt-manager</command></action></item>
</menu>


<menu id="system-menu" label="System">
  <item label="Lxappearance"><action name="Execute"><command>lxappearance</command></action></item>
  <item label="Nitrigen"><action name="Execute"><command>nitrogen</command></action></item>
  <item label="Tint2conf"><action name="Execute"><command>tint2conf</command></action></item>

  <separator />

  <item label="Reconfigure Openbox"><action name="Reconfigure" /></item>
</menu>


<menu id="root-menu" label="Openbox 3">
  <item label="Alacritty">
    <action name="Execute">
      <command>alacritty</command>
    </action>
  </item>
  <item label="Nemo">
    <action name="Execute">
      <command>nemo</command>
    </action>
  </item>
  <item label="Firefox">
    <action name="Execute">
      <command>firefox</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Firefox</wmclass>
      </startupnotify>
    </action>
  </item>
  <item label="Telegram">
    <action name="Execute">
      <command>telegram-desktop</command>
    </action>
  </item>

  <separator />
  <menu id="apps-audio-menu"/>
  <menu id="apps-graphics-menu"/>
  <menu id="apps-soft-menu"/>
  <menu id="apps-fileman-menu"/>
  <menu id="system-menu"/>
  <separator />
  <item label="Log Out">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>

  </item>
  <item label="Reboot">
    <action name="Execute">
	<command>reboot</command>
    </action>
  </item>

  <item label="Poweroff">
    <action name="Execute">
	<command>poweroff</command>
    </action>
  </item>
</menu>

</openbox_menu>
